<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="com.example.android.equalizer.MainActivity">

    <!--Sound Styles & Reset Button-->
    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <!--Sound Styles-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/defaultEf_button"
                style="@style/SoundStyleText"
                android:background="@drawable/bg_btn_selected"
                android:text="默认" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!--Selected-->
            <TextView
                 android:id="@+id/rockEf_button"
                style="@style/SoundStyleText"
                android:elevation="4dp"
                android:text="摇滚" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/popularEf_button"
                style="@style/SoundStyleText"
                android:text="流行" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/jazzEf_button"
                style="@style/SoundStyleText"
                android:text="爵士" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/classicEf_button"
                style="@style/SoundStyleText"
                android:text="经典" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin" />

        <!--Reset Button-->
        <TextView
             android:id="@+id/reset_button"
            style="@style/SoundStyleText"
            android:background="@drawable/btn_bg_selector"
            android:text="复位" />


    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!--TRE Slider-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <!--Value-->
        <TextView
            android:id="@+id/tre_tv"
            style="@style/EqSliderText"
            android:text="0" />

        <com.console.equalizer.view.VerticalSeekBar
            android:id="@+id/SeekBarTRE"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:max="100"
            android:maxHeight="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_drawable"
            android:thumb="@drawable/ic_thumb"
            android:thumbOffset="16dp" />

        <!--Label-->
        <TextView
            style="@style/EqSliderText"
            android:text="高音" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent" />
    
    <!--MID Slider-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <!--Value-->
        <TextView
            android:id="@+id/mid_tv"
            style="@style/EqSliderText"
            android:text="0" />

        <com.console.equalizer.view.VerticalSeekBar
            android:id="@+id/SeekBarMID"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:max="100"
            android:maxHeight="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_drawable"
            android:thumb="@drawable/ic_thumb"
            android:thumbOffset="16dp" />

        <!--Label-->
        <TextView
            style="@style/EqSliderText"
            android:text="中音" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent" />

    <!--BAS Slider-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <!--Value-->
        <TextView
            android:id="@+id/bas_tv"
            style="@style/EqSliderText"
            android:text="0" />

        <com.console.equalizer.view.VerticalSeekBar
            android:id="@+id/SeekBarBas"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:max="100"
            android:maxHeight="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_drawable"
            android:thumb="@drawable/ic_thumb"
            android:thumbOffset="16dp" />

        <!--Label-->
        <TextView
            style="@style/EqSliderText"
            android:text="低音" />

    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <include layout="@layout/sound_balance" /> 
       

</LinearLayout>
