<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:entries="@array/ss_acc_driver_entries"
        android:entryValues="@array/ss_acc_driver_values"
        android:key="ACC_DRIVER_PROGRAM"
        android:persistent="false"
        android:title="自适应巡航模式" />

    <SwitchPreference
        android:key="LAST_DISTANCE_SELECTED"
        android:summaryOff="OFF"
        android:summaryOn="ON"
        android:title="上次选择的车距" />

    <ListPreference
        android:entries="@array/ss_acc_distance_entries"
        android:entryValues="@array/ss_acc_distance_values"
        android:key="ACC_DISTANCE"
        android:persistent="false"
        android:title="自适应巡航车距" />
    
     <SwitchPreference
        android:key="FRONT_ASSIST_ACTIVE"
        android:summaryOff="OFF"
        android:summaryOn="ON"
        android:title="前部辅助系统激活" />
    <SwitchPreference
        android:key="FRONT_ASSIST_ADVANCE_WARNING"
        android:summaryOff="OFF"
        android:summaryOn="ON"
        android:title="前部辅助系统预警" />
    <SwitchPreference
        android:key="FRONT_ASSIST_DISPLAY_DISTANCHE_WARNING"
        android:summaryOff="OFF"
        android:summaryOn="ON"
        android:title="显示距离报警" />
    
     <SwitchPreference
        android:key="LANE_DEPARTURE"
        android:summaryOff="OFF"
        android:summaryOn="ON"
        android:title="自适应车道导向" />
     
     <SwitchPreference
        android:key="PAUSE_LKAS_SIGN"
        android:summaryOff="OFF"
        android:summaryOn="ON"
        android:title="信号灯识别" />
     
     <SwitchPreference
        android:key="DETECT_FRONT_CAR"
        android:summaryOff="OFF"
        android:summaryOn="ON"
        android:title="驾驶报警系统" />
     
     
     <SwitchPreference
        android:key="DRIVER_ALERT_SYSTEM"
        android:summaryOff="OFF"
        android:summaryOn="ON"
        android:title="前障碍保护激活" />


</PreferenceScreen>