<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_door_open"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <!--Door Front Left-->
    <ImageView
        android:id="@+id/flDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/door_fl"
        android:visibility="visible" />

    <!--Door Front Right-->
    <ImageView
        android:id="@+id/frDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/door_fr"
        android:visibility="visible" />

    <!--Door Rear Left-->
    <ImageView
        android:id="@+id/rlDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/door_rl"
        android:visibility="visible" />

    <!--Door Rear Right-->
    <ImageView
        android:id="@+id/rrDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/door_rr"
        android:visibility="visible" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="218dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_car" />

    <!--Engine Hood Open-->
    <ImageView
        android:id="@+id/hood_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/engine_hood_open"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <!--Trunk Open-->
    <ImageView
        android:id="@+id/trunk_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trunk_open"
        android:layout_gravity="center"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/door_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!--Close Button-->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:scaleType="center"
        android:src="@drawable/ic_close" />

</FrameLayout>
