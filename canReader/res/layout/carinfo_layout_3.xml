<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/pageViewTitle"
        android:text="@string/driving_datas_long_term" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <View style="@style/verDivide" />

        <LinearLayout style="@style/PageViewLayout" >
            
            <View style="@style/honDivide" />

            <TextView
                style="@style/PageViewTextView"
                android:text="@string/average_oil_consumption" />

            <View style="@style/honDivide" />

            <TextView
                android:id="@+id/consumption"
                style="@style/PageViewTextView"
                android:text="12.6L/100km" />

            <View style="@style/honDivide" />

            <TextView
                style="@style/PageViewTextView"
                android:text="@string/travelling_time" />

            <View style="@style/honDivide" />

            <TextView
                android:id="@+id/travelling_time"
                style="@style/PageViewTextView"
                android:text="@string/time_17" />
            
            <View style="@style/honDivide" />
            
        </LinearLayout>

        <View style="@style/verDivide" />

        <LinearLayout style="@style/PageViewLayout" >
            
            <View style="@style/honDivide" />

            <TextView
                style="@style/PageViewTextView"
                android:text="@string/range" />

            <View style="@style/honDivide" />

            <TextView
                android:id="@+id/range"
                style="@style/PageViewTextView"
                android:text="370km" />

            <View style="@style/honDivide" />

            <TextView
                style="@style/PageViewTextView"
                android:text="@string/average_speed" />

            <View style="@style/honDivide" />

            <TextView
                android:id="@+id/speed"
                style="@style/PageViewTextView"
                android:text="11km/h" />
            
            <View style="@style/honDivide" />
            
        </LinearLayout>

        <View style="@style/verDivide" />

        <LinearLayout style="@style/PageViewLayout" >
            
            <View style="@style/honDivide" />

            <TextView
                style="@style/PageViewTextView"
                android:text="@string/driving_distance" />

            <View style="@style/honDivide" />

            <TextView
                android:id="@+id/distance"
                style="@style/PageViewTextView"
                android:text="190.2km" />

            <View style="@style/honDivide" />

            <TextView
                style="@style/PageViewTextView"
                android:text="" />

            <View style="@style/honDivide" />

            <TextView
                style="@style/PageViewTextView"
                android:text="" />
            <View style="@style/honDivide" />
        </LinearLayout>

        <View style="@style/verDivide" />
    </LinearLayout>

</LinearLayout>