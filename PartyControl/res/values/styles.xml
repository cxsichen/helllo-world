<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="mainTitleBtnStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">@dimen/mainTitleBtnWd</item>
        <item name="android:layout_height">@dimen/mainTitleBtnHg</item>
        <item name="android:background">@color/trans</item>
    </style>
    
     <style name="mainTitleText" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="mainBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">@dimen/mainImgBtnWd</item>
        <item name="android:layout_height">@dimen/mainImgBtnHg</item>
        <item name="android:background">@drawable/item_choice</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25dp</item>
    </style>
    
    <style name="mainTvStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">@dimen/mainTvWd</item>
        <item name="android:layout_height">@dimen/mainTvHg</item>
        <item name="android:background">@drawable/tv_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="mMainIconStyle">
        <item name="android:layout_width">@dimen/mainIconWd</item>
        <item name="android:layout_height">@dimen/mainIconHg</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
        <style name="pwBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="spaceView1">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">48dp</item>
    </style>

    <style name="spaceHorizontal">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="spaceVertical">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="norBtnStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">112dp</item>
        <item name="android:background">@drawable/bg_frame</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="keyIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="keyValueStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_frame</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
