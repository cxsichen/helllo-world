<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_panel"
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="320dp"
    android:elevation="4dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/am_fm_changeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/am_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="AM"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="48dp"
            android:layout_height="1dp"
            android:background="#1FFFFFFF" />

        <TextView
            android:id="@+id/fm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="FM"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/change_layout_button"
            style="@style/IvStyle"
            android:src="@drawable/change_btn_selector" />
        
        <ImageView
            android:id="@+id/scan_button"
            style="@style/IvStyle"
            android:src="@drawable/scan_btn_selector" />
        
         <ImageView
            android:id="@+id/back_button"
            style="@style/IvStyle"
            android:src="@drawable/back_btn_selector" />

        <ImageView
            android:id="@+id/play_button"
            style="@style/IvStyle"
            android:src="@drawable/ic_stop" />

    </LinearLayout>

</RelativeLayout>